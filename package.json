{
  "name": "discourse-dark",
  "title": "Discourse Dark",
  "version": "1.1.0",
  "description": "Darken Discourse forums",
  "license": "CC-BY-SA-4.0",
  "repository": "https://github.com/StylishThemes/Discourse-Dark",
  "homepage": "https://github.com/StylishThemes/Discourse-Dark",
  "main": "discourse-dark.user.css",
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-config-silverwind": "^2.1.0",
    "perfectionist": "^2.4.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.3.0",
    "updates": "^7.1.1",
    "ver": "^4.2.0"
  },
  "scripts": {
    "authors": "bash tools/authors",
    "clean": "npm run perfectionist && node tools/fix-perfectionist.js",
    "eslint": "eslint --quiet --color tools/*.js",
    "lint": "npm run eslint && npm run stylelint",
    "major": "npx ver -p major discourse-dark.user.css",
    "minor": "npx ver -p minor discourse-dark.user.css",
    "patch": "npx ver -p patch discourse-dark.user.css",
    "perfectionist": "npx perfectionist discourse-dark.user.css discourse-dark.user.css --indentSize 2 --maxAtRuleLength 250",
    "stylelint": "npx stylelint --quiet --color -- discourse-dark.user.css",
    "test": "npm run eslint && npm run stylelint",
    "update": "npx updates -cu && npm install"
  }
}
